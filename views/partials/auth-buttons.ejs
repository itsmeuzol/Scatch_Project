<% if (!loggedin) { %>
<!-- Signup & Login -->
<a
  href="/register"
  class="bg-teal-700 text-white px-5 py-2 rounded-lg font-semibold shadow-md hover:bg-teal-800"
  >Signup</a
>
<a
  href="/login"
  class="bg-teal-700 text-white px-5 py-2 rounded-lg font-semibold shadow-md hover:bg-teal-800"
  >Log In</a
>
<% } else { %>
<!-- If logged in, show username and dropdown -->
<div class="flex items-center space-x-2 relative">
  <!-- Avatar Icon -->
  <div
    class="w-8 h-8 rounded-full bg-gray-300 flex items-center justify-center overflow-hidden"
  >
    <% if (avatar) { %>
    <img
      src="data:image/jpeg;base64,<%= avatar.toString('base64') %>"
      alt="User Avatar"
      class="w-full h-full object-cover"
    />
    <% } else { %>
    <span class="text-white font-semibold"><%= fullname[0] %></span>
    <% } %>
  </div>

  <!-- Username and Dropdown Icon -->
  <div class="relative">
    <span
      id="dropdown-toggle"
      class="text-green font-semibold cursor-pointer flex items-center"
    >
      Hey! <%= fullname %>
      <!-- Dropdown Icon -->
      <svg
        id="dropdown-icon"
        class="w-4 h-4 ml-1 transition-transform"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 9l-7 7-7-7"
        ></path>
      </svg>
    </span>

    <!-- Dropdown Menu -->
    <div
      id="dropdown-menu"
      class="absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-lg shadow-lg hidden z-50"
    >
      <ul class="py-2">
        <li>
          <a
            href="/users/profile"
            class="block px-4 py-2 text-gray-700 hover:bg-gray-100"
            >My Profile</a
          >
        </li>

        <li>
          <a
            href="/users/change-password"
            class="block px-4 py-2 text-gray-700 hover:bg-gray-100"
            >Change Password</a
          >
        </li>
        <li>
          <a
            href="/users/logout"
            class="block px-4 py-2 text-red-500 font-semibold hover:bg-gray-100"
            >Logout</a
          >
        </li>
      </ul>
    </div>
  </div>
</div>
<% } %>
