<%- include('./partials/header') %>

<!-- Main Content for User Dashboard -->
<div
  class="min-h-screen bg-gradient-to-br from-blue-50 to-blue-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
>
  <div class="max-w-7xl w-full space-y-8">
    <div class="bg-white/70 backdrop-blur-lg shadow-lg rounded-2xl p-10">
      <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">
        User Dashboard
      </h1>

      <!-- User Profile Information -->
      <div class="bg-white shadow-md rounded-lg p-6 mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">
          Profile Information
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700"
              >Full Name</label
            >
            <p class="mt-1 text-gray-900"><%= user.fullname %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700"
              >Email Address</label
            >
            <p class="mt-1 text-gray-900"><%= user.email %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700"
              >Phone Number</label
            >
            <p class="mt-1 text-gray-900">
              <%= user.phone || "Not provided" %>
            </p>
          </div>
          
        </div>
      </div>

      <!-- Upcoming Appointments -->
      <div class="bg-white shadow-md rounded-lg p-6 mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">
          Upcoming Appointments
        </h2>
        <% if (appointments.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="bg-gray-50">
              <tr>
                <th
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Date
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Time
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Service
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Status
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% appointments.forEach(appointment => { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= appointment.date.toDateString() %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= appointment.time %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= appointment.service %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (appointment.status === 'Accepted') { %>
                      <span class="text-green-600 font-semibold">Accepted</span>
                    <% } else { %>
                      <span class="text-yellow-500 font-semibold">Pending</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
            
          </table>
        </div>
        <% } else { %>
        <p class="text-gray-600">No upcoming appointments.</p>
        <% } %>
      </div>

      <!-- Quick Actions -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <a
          href="/users/appointment"
          class="bg-blue-500 text-white p-6 rounded-lg shadow-md hover:bg-blue-600 transition duration-300"
        >
          <h2 class="text-xl font-semibold">Book an Appointment</h2>
          <p class="text-sm">Schedule a new appointment with your doctor.</p>
        </a>
        <a
          href="/users/view-prescription"
          class="bg-green-500 text-white p-6 rounded-lg shadow-md hover:bg-green-600 transition duration-300"
        >
          <h2 class="text-xl font-semibold">View Prescriptions Records</h2>
          <p class="text-sm">Access your medical history and records.</p>
        </a>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
