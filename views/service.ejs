<%- include('./partials/header') %>

<div class="min-h-screen bg-gray-100 py-12">
    <div class="container mx-auto px-6">
        <!-- Page Heading -->
        <h1 class="text-4xl font-bold text-center mb-8">Our Services</h1>
        <p class="text-lg text-gray-600 text-center mb-12">We offer a wide range of medical services to meet your health needs.</p>

        <!-- Services Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Service Card 1 -->
            <div class="bg-white p-8 rounded-lg shadow-lg text-center hover:shadow-xl transition-shadow duration-300">
