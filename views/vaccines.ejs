<%- include('./partials/header') %>

<!-- Main Content for Vaccines Page -->
<div class="min-h-screen bg-gray-100 py-12">
  <div class="container mx-auto px-6">
    <div class="flex justify-center items-center mb-12 relative">
      <h1 class="text-4xl font-extrabold text-gray-800 text-center">Available Vaccines</h1>
      <% if (user && user.role === 'staff') { %>
        <button 
          id="toggleAddForm"
          class="absolute right-0 bg-green-700 text-white px-5 py-2 rounded-full text-md font-semibold transition-all duration-300 hover:scale-105 hover:shadow-lg"
        >
          + Add Vaccine
        </button>
      <% } %>
    </div>
    
    <% if (user && user.role === 'staff') { %>
      <!-- Add Vaccine Form (Hidden by default) -->
      <div 
        id="addVaccineForm" 
        class="bg-gradient-to-br from-white to-gray-50 shadow-lg rounded-xl p-8 mb-12 hidden"
      >
        <h2 class="text-2xl font-bold text-gray-800 mb-6 ">Add New Vaccine</h2>
        <form action="/staff/add-vaccine" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Vaccine Name -->
          <div>
            <label class="block mb-2 text-sm font-medium text-gray-700">Vaccine Name</label>
            <input 
              type="text" 
              name="name" 
              placeholder="Enter vaccine name" 
              required 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
          <!-- Description -->
          <div>
            <label class="block mb-2 text-sm font-medium text-gray-700">Description</label>
            <input 
              type="text" 
              name="description" 
              placeholder="Enter description" 
              required 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
          <!-- Available Slots -->
          <div>
            <label class="block mb-2 text-sm font-medium text-gray-700">Available Slots</label>
            <input 
              type="number" 
              name="availableSlots" 
              placeholder="Enter available slots" 
              required 
              min="1" 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
          <!-- Hospital Name -->
          <div>
            <label class="block mb-2 text-sm font-medium text-gray-700">Hospital Name</label>
            <input 
              type="text" 
              name="hospital" 
              placeholder="Enter hospital name" 
              required 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
          <!-- Submit Button -->
          <div class="md:col-span-2 text-center">
            <button 
              type="submit" 
              class="bg-blue-500 text-white px-8 py-3 rounded-lg shadow-md hover:from-teal-600 hover:to-blue-600 transition duration-300"
            >
              Add Vaccine
            </button>
          </div>
        </form>
      </div>
      <% } %>

    <!-- Vaccine List -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% vaccines.forEach(vaccine => { %>
        <div class="bg-white shadow-md rounded-lg p-6 hover:shadow-lg transition-shadow duration-300 flex flex-col justify-between h-full">
          <div>
            <h2 class="text-2xl font-bold text-gray-800 mb-2"><%= vaccine.name %></h2>
            <p class="text-sm text-gray-600 mb-2"><%= vaccine.description %></p>
            <p class="text-sm text-gray-600 mb-2">Available Slots: <%= vaccine.availableSlots %></p>
            <p class="text-sm text-gray-600 mb-2">Hospital: <%= vaccine.hospital %></p>
          </div>
          <div class="mt-auto pt-4">
            <a
              href="/users/book-vaccine/<%= vaccine._id %>"
              class="inline-block bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 transition duration-200 w-full text-center"
            >
              Book Now
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>

<!-- Toggle Form Script -->
<script>
  const toggleBtn = document.getElementById("toggleAddForm");
  const form = document.getElementById("addVaccineForm");

  toggleBtn.addEventListener("click", () => {
    form.classList.toggle("hidden");
  });
</script>
